{
  "name": "madui",
  "version": "1.0.0",
  "description": "A collection of reusable components for building user interfaces with Tailwind CSS and Radix UI.",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "madui",
    "url": "https://twitter.com/madui"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Anas-github-acc/madui.git",
    "directory": "packages/madui"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "ui",
    "tailwind",
    "radix-ui",
    "madui"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "default": "./dist/registry/index.js"
    }
  },
  "bin": "./dist/index.js",
  "scripts": {
    "dev": "tsup --watch --sourcemap --dts --clean",
    "build": "tsup --sourcemap --dts --clean",
    "clean": "rimraf dist && rimraf components",
    "start": "node dist/index.js",
    "test": "vitest run",
    "generate:component": "turbo gen react-component",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/react": "19.1.4",
    "eslint": "9.27.0",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.5.3",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cosmiconfig": "^9.0.0",
    "fs-extra": "^11.3.0",
    "kleur": "^4.1.5",
    "lucide-react": "0.511.0",
    "prompts": "^2.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "3.3.0",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.25.4"
  }
}
